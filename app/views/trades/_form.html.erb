
<%= simple_form_for(@trade) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :currency %>
    <%= f.input :deposit %>
    <%= f.input :expiration %>
    <%= f.input :status %>
    <%= f.input :tradetype %>
    <%= f.input :entry %>
    <%= f.input :rate %>
    <%= f.input :return %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

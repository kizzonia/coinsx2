
<%= simple_form_for(@withdraw) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :payment_type, as: :select, :collection => [ "Bitcoin", "Eth", "Bitcoin Cash"], :label => "Currency" , :include_blank => false %>
    <%= f.input :amount, placeholder: "Investment Amount" %>
    <%= f.input :email, placeholder: "Please Provide Your Registered Email" %>

    <%= f.input :wallet %>
  </div>

  <div class="col-md-6 col-xs-6">
      <div class="text-right mrg-top-5">
    <%= f.button :submit, "Proceed", class: "btn btn-primary" %>
  </div>
  </div>
<% end %>


<%= simple_form_for(@fxsignal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :body %>
    <%= f.input :entry_point %>
    <%= f.input :exit_point %>
    <%= f.input :slug %>
    <%= f.input :stop_loss %>
    <%= f.input :sell_point1 %>
    <%= f.input :sell_point2 %>
    <%= f.input :tradetype %>
    <%= f.input :odds %>
    <%= f.input :status %>
    <%= f.input :date %>
    <%= f.input :pairs %>
    <%= f.input :leverage %>
    <%= f.input :call_type %>
    <%= f.input :exchange %>
    <%= f.input :stop_loss %>
    <%= f.input :sub %>
    <%= f.input :info %>
    <%= f.input :archive_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

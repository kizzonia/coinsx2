                        </ul>
                    </div>
                    <div class="blog-content">
                       <ul class="blog-meta">
                           <li class="date"><i class="fa fa-calendar-check-o"></i>   <%= a.created_at %></li>
                           <li class="admin"><i class="fa fa-user-o"></i> admin</li>
                       </ul>
                       <h3 class="blog-title">
                         <%= link_to a.title, a %>
                       </h3>
                       <p class="desc">
                         <%= a.sub_title %>

                       </p>

                       <div class="blog-button">
                           <%= link_to "Learn More", a %>
                       </div>
                    </div>
                </div>
                <% end %>
             </div>


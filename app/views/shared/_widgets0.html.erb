<div id="sidebar" class="col-md-4" style="background-size: cover;">
  <div class="widget widget-text" style="background-size: cover;">
    <h4>Services</h4>
    <div class="small-border" style="background-size: cover;"></div>
    <ul>
      <ul class="list-group">
        <% @services.each do |s| %>
        <li class="list-group-item"><%= link_to s.title, s %></li>

        <% end %>
      </ul>
    </ul>
  </div>


  <div class="widget widget-text" style="background-size: cover;">
    <h4>About Us</h4>
    <div class="small-border" style="background-size: cover;"></div>
    <ul class="list-group">
      <% @abouts.each do |s| %>
      <li class="list-group-item"><%= link_to s.title, s %></li>

      <% end %>
    </ul>
  </div>

<% if Contact.exists? %>
  <div class="widget widget_text" style="background-size: cover;">
    <h4>Contacts</h4>
    <div class="small-border" style="background-size: cover;"></div>
      <% @contacts.each do |c| %>
          <div class="padding40 bg-color text-light box-rounded" style="background-size: cover;">
            <h3><%= c.name %></h3>
            <address class="s1">
              <span><i class="fa fa-map-marker fa-lg"></i><%= c.address %></span>
              <span><i class="fa fa-phone fa-lg"></i>+<%= c.phone %></span>
              <span><i class="fa fa-whatsapp fa-lg"></i><a href="<%= c.body %>">whatsapp: <%= c.phone %></a></span>
              <span><i class="fa fa-envelope-o fa-lg"></i><a href="mailto:<%= c.email %>"><%= c.email %></a></span>
            </address>

          </div>
      <% end %>
  </div>
  <% else %>
  <div class="padding40 bg-color text-light box-rounded" style="background-size: cover;">
								<h3>AU Office</h3>
								<address class="s1">
									<span><i class="fa fa-map-marker fa-lg"></i>100 Mainstreet Center, Sydney</span>
									<span><i class="fa fa-phone fa-lg"></i>+61 333 9296</span>
									<span><i class="fa fa-envelope-o fa-lg"></i><a href="mailto:contact@example.com">contact@example.com</a></span>
									<span><i class="fa fa-file-pdf-o fa-lg"></i><a href="#">Download Brochure</a></span>
								</address>
							</div>

  <% end %>

</div>
